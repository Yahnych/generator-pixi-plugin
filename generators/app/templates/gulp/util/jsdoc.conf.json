{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": [
            "./src/"
        ],
        "exclude": [
        ],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks"   : false,
        "monospaceLinks": false,
        "default"       : {
            "outputSourceFiles" : true
        },
        "systemName"    : "<%= config.projectName %>",
        "footer"        : "",
        "copyright"     : "Copyright Â© <%= (new Date()).getFullYear() %> <%= config.userName %>.",
        "linenums"      : true
    },
    "markdown"  : {
        "parser"        : "gfm",
        "hardwrap"      : true
    },
    "opts": {
        "encoding"      : "utf8",
        "recurse"       : true,
        "private"       : false,
        "lenient"       : true,
        "destination"   : "./docs",
        "template"      : "./node_modules/jaguarjs-jsdoc"

    }
}
